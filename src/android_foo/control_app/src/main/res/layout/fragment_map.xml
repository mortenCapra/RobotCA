<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map_fragment" >

    <org.osmdroid.views.MapView
    android:id="@+id/mapview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true" >

    </org.osmdroid.views.MapView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

<!--        <Button-->
<!--            android:id="@+id/routing_button"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/routing" />-->

<!--        <Button-->
<!--            android:id="@+id/area_button"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/Area" />-->

        <Button
            android:id="@+id/new_obstacle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_obstacle" />

        <Button
            android:id="@+id/clear_route_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_route" />

        <Button
            android:id="@+id/clear_area_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_area" />

        <Button
            android:id="@+id/clear_obstacle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_obstacle" />

        <Button
            android:id="@+id/clear_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_all" />

        <Button
            android:id="@+id/recenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
    </LinearLayout>

    <Button
        android:id="@+id/markerOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/marker_option"
        android:layout_alignBottom="@+id/mapview"
        android:layout_alignRight="@+id/mapview"
        android:layout_alignEnd="@+id/mapview" />

</RelativeLayout>